{
  "name": "nestjs-api",
  "version": "0.1.0",
  "description": "An api platform is developed by NestJS framework",
  "author": "flex-solutions",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "start": "NODE_ENV=dev ts-node -r tsconfig-paths/register src/main.ts | bunyan",
    "start:dev": "NODE_ENV=dev nodemon",
    "start-win:dev": "cls&&set NODE_ENV=dev&&ts-node -r tsconfig-paths/register src/main.ts",
    "debug_windows": "cls&&set NODE_ENV=dev&&nodemon",
    "prestart:prod": "rm -rf dist && tsc",
    "start:prod": "NODE_ENV=prod node dist/main.js",
    "prestart:uat": "rm -rf dist && tsc",
    "start:uat": "NODE_ENV=uat node dist/main.js",
    "start:hmr": "node dist/server",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js"
  },
  "dependencies": {
    "@nestjs/common": "^5.6.2",
    "@nestjs/core": "^5.6.2",
    "@nestjs/passport": "^5.1.0",
    "@nestjs/testing": "^5.6.2",
    "@nestjs/websockets": "^5.6.2",
    "@sendgrid/mail": "^6.3.1",
    "agenda": "^2.0.2",
    "bcrypt": "^2.0.1",
    "body-parser": "^1.18.3",
    "bunyan": "^1.8.12",
    "bunyan-rotating-file-stream": "1.6.3",
    "class-transformer": "^0.1.9",
    "class-validator": "^0.8.5",
    "cls-hooked": "^4.2.2",
    "deasync": "^0.1.13",
    "dotenv": "^6.2.0",
    "exceljs": "^1.10.0",
    "fastify-formbody": "^2.0.0",
    "jade": "^1.11.0",
    "joi": "^14.3.1",
    "js-yaml": "^3.11.0",
    "jsftp": "sergi/jsftp",
    "jsonwebtoken": "^8.2.1",
    "lodash": "^4.17.11",
    "logzio-bunyan": "^1.0.1",
    "moment": "^2.24.0",
    "mongoose": "^5.4.7",
    "node-fetch": "^2.1.2",
    "nodemailer": "^4.6.5",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "ramda": "^0.26.1",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.1.0",
    "socket.io-client": "^2.1.1",
    "typescript": "^2.8.3"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.4",
    "@types/cls-hooked": "^4.2.0",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.2.3",
    "@types/joi": "^14.3.0",
    "@types/js-yaml": "3.11.1",
    "@types/mongoose": "^5.3.10",
    "@types/node": "^10.12.19",
    "@types/nodemailer": "^4.6.0",
    "@types/pug": "^2.0.4",
    "@types/ramda": "^0.25.47",
    "@types/socket.io-client": "^1.4.32",
    "@types/supertest": "^2.0.4",
    "jest": "^22.4.3",
    "nodemon": "^1.17.4",
    "prettier": "^1.12.1",
    "supertest": "^3.1.0",
    "ts-jest": "^22.4.6",
    "ts-loader": "^4.3.0",
    "ts-node": "^6.0.3",
    "tsconfig-paths": "^3.3.2",
    "tslint": "5.10.0",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
